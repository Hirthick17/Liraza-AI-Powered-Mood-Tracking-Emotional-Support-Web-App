import { useEffect, useState } from "react";
import { useNavigate } from "react-router-dom";
import { supabase } from "@/integrations/supabase/client";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { useToast } from "@/hooks/use-toast";
import { User } from "@supabase/supabase-js";
import { ArrowLeft, Calendar, TrendingUp, Heart, Sparkles, Brain, ChevronLeft, ChevronRight, Smile, MessageCircle } from "lucide-react";
import { motion, AnimatePresence } from "framer-motion";
import { Dialog, DialogContent, DialogDescription, DialogHeader, DialogTitle } from "@/components/ui/dialog";
import { AvatarPersona } from "@/components/chat/AvatarPersona";
import { analyzeSentiment } from "@/lib/sentiment";

interface MoodLog {
  id: string;
  mood: string;
  note: string | null;
  created_at: string;
  user_id: string;
}

interface ConversationData {
  message: string;
  sentiment: string;
  timestamp: string;
}

interface DayData {
  date: Date;
  mood: MoodLog | null;
  dayNumber: number;
  isCurrentMonth: boolean;
}

const EMOTIONS = [
  { emoji: "ðŸ˜Š", label: "Happy", mood: "very_happy", color: "#FFD700", bgColor: "#FFF9C4" },
  { emoji: "ðŸ˜Œ", label: "Calm", mood: "happy", color: "#87CEEB", bgColor: "#E0F7FA" },
  { emoji: "ðŸ˜¢", label: "Sad", mood: "sad", color: "#4169E1", bgColor: "#E3F2FD" },
  { emoji: "ðŸ˜¤", label: "Angry", mood: "very_sad", color: "#DC143C", bgColor: "#FFEBEE" },
  { emoji: "ðŸ˜", label: "Neutral", mood: "neutral", color: "#808080", bgColor: "#F5F5F5" },
];

const getMoodColor = (mood: string): string => {
  const moodMap: Record<string, string> = {
    very_happy: "#FFD700", // Yellow
    happy: "#FFD700", // Yellow
    neutral: "#808080", // Gray
    sad: "#4169E1", // Blue
    very_sad: "#DC143C", // Red (angry)
  };
  return moodMap[mood] || "#808080";
};

const getMoodEmoji = (mood: string): string => {
  const emojiMap: Record<string, string> = {
    very_happy: "ðŸ˜Š",
    happy: "ðŸ˜Œ",
    neutral: "ðŸ˜",
    sad: "ðŸ˜¢",
    very_sad: "ðŸ˜¤",
  };
  return emojiMap[mood] || "ðŸ˜";
};

const generateMotivationalMessage = (mood: string, dayNote?: string): string => {
  const messages: Record<string, string[]> = {
    very_happy: [
      "Your joy is contagious! Keep spreading that positive energy! ðŸŒŸ",
      "Wonderful to see you feeling great! Remember this moment. âœ¨",
      "You're shining today! Your happiness lights up the world. â˜€ï¸",
    ],
    happy: [
      "You're doing great! Small moments of peace matter. ðŸ’™",
      "Keep moving forward with that calm energy. You've got this! ðŸŒ±",
      "Your steady progress is inspiring. Keep going! ðŸ’ª",
    ],
    neutral: [
      "Every day is a fresh start. You're exactly where you need to be. ðŸŒˆ",
      "It's okay to feel neutral. Tomorrow holds new possibilities. ðŸŒ…",
      "Your feelings are valid. Take it one step at a time. ðŸ¤—",
    ],
    sad: [
      "It's okay to feel down. You're not alone, and this feeling will pass. ðŸ’™",
      "You're brave for acknowledging how you feel. Healing takes time. ðŸŒ±",
      "Difficult days don't define you. You have the strength to get through this. ðŸ’ª",
    ],
    very_sad: [
      "Your feelings matter, even the difficult ones. It's okay to not be okay. ðŸ¤—",
      "You're stronger than you know. This moment is temporary. ðŸŒˆ",
      "Remember: storms pass, and you have the resilience to weather this. â›ˆï¸âž¡ï¸â˜€ï¸",
    ],
  };

  const moodKey = mood === "very_happy" || mood === "happy" 
    ? (mood === "very_happy" ? "very_happy" : "happy")
    : mood;
  
  const options = messages[moodKey] || messages.neutral;
  
  // If there's a day note, try to personalize the message
  if (dayNote && dayNote.length > 10) {
    const sentiment = analyzeSentiment(dayNote);
    if (sentiment === "joyful" && moodKey !== "very_happy") {
      return options[0].replace(/ðŸŒŸ|âœ¨|â˜€ï¸/, "ðŸŽ‰");
    }
  }
  
  return options[Math.floor(Math.random() * options.length)];
};

const Mood = () => {
  const [user, setUser] = useState<User | null>(null);
  const [moodLogs, setMoodLogs] = useState<MoodLog[]>([]);
  const [currentDate, setCurrentDate] = useState(new Date());
  const [selectedDate, setSelectedDate] = useState<Date | null>(null);
  const [selectedEmotion, setSelectedEmotion] = useState<string | null>(null);
  const [dayNote, setDayNote] = useState("");
  const [isDialogOpen, setIsDialogOpen] = useState(false);
  const [motivationalMessage, setMotivationalMessage] = useState<string>("");
  const [healthPercentage, setHealthPercentage] = useState<number>(0);
  const [healthChange, setHealthChange] = useState<number>(0);
  const [isAnalyzing, setIsAnalyzing] = useState(false);
  const { toast } = useToast();
  const navigate = useNavigate();

  useEffect(() => {
    const { data: { subscription } } = supabase.auth.onAuthStateChange((_event, session) => {
      setUser(session?.user ?? null);
    });

    supabase.auth.getSession().then(({ data: { session } }) => {
      setUser(session?.user ?? null);
    });

    return () => subscription.unsubscribe();
  }, []);

  useEffect(() => {
    if (user) {
      loadMoodLogs();
      calculateHealthMetrics();
    }
  }, [user, moodLogs]);

  const loadMoodLogs = async () => {
    if (!user) return;

    const { data, error } = await supabase
      .from("mood_logs")
      .select("*")
      .eq("user_id", user.id)
      .order("created_at", { ascending: false });

    if (error) {
      console.error("Error loading mood logs:", error);
    } else {
      setMoodLogs(data || []);
    }
  };

  const calculateHealthMetrics = () => {
    if (moodLogs.length < 2) {
      setHealthPercentage(50);
      setHealthChange(0);
      return;
    }

    // Calculate average mood score (last 30 days)
    const last30Days = moodLogs.slice(0, 30);
    const moodScores: Record<string, number> = {
      very_happy: 5,
      happy: 4,
      neutral: 3,
      sad: 2,
      very_sad: 1,
    };

    const currentAvg = last30Days.length > 0
      ? last30Days.reduce((sum, log) => sum + (moodScores[log.mood] || 3), 0) / last30Days.length
      : 3;

    // Compare with previous 30 days if available
    const previous30Days = moodLogs.slice(30, 60);
    const previousAvg = previous30Days.length > 0
      ? previous30Days.reduce((sum, log) => sum + (moodScores[log.mood] || 3), 0) / previous30Days.length
      : 3;

    const percentage = (currentAvg / 5) * 100;
    const change = currentAvg - previousAvg;

    setHealthPercentage(Math.round(percentage));
    setHealthChange(Math.round(change * 20)); // Convert to percentage change
  };

  const getDaysInMonth = (): DayData[] => {
    const year = currentDate.getFullYear();
    const month = currentDate.getMonth();
    const firstDay = new Date(year, month, 1);
    const lastDay = new Date(year, month + 1, 0);
    const daysInMonth = lastDay.getDate();
    const startingDayOfWeek = firstDay.getDay();

    const days: DayData[] = [];
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    // Add empty cells for days before the first day of the month
    for (let i = 0; i < startingDayOfWeek; i++) {
      days.push({
        date: new Date(year, month, -startingDayOfWeek + i + 1),
        mood: null,
        dayNumber: -startingDayOfWeek + i + 1,
        isCurrentMonth: false,
      });
    }

    // Add days of the month
    for (let day = 1; day <= daysInMonth; day++) {
      const date = new Date(year, month, day);
      date.setHours(0, 0, 0, 0);
      
      const moodLog = moodLogs.find(log => {
        const logDate = new Date(log.created_at);
        logDate.setHours(0, 0, 0, 0);
        return logDate.getTime() === date.getTime();
      });

      days.push({
        date,
        mood: moodLog || null,
        dayNumber: day,
        isCurrentMonth: true,
      });
    }

    return days;
  };

  const handleDateClick = (day: DayData) => {
    if (!day.isCurrentMonth) return;
    setSelectedDate(day.date);
    if (day.mood) {
      setSelectedEmotion(day.mood.mood);
      setDayNote(day.mood.note || "");
    } else {
      setSelectedEmotion(null);
      setDayNote("");
    }
    setIsDialogOpen(true);
  };

  const handleEmotionSelect = (mood: string) => {
    setSelectedEmotion(mood);
    const message = generateMotivationalMessage(mood, dayNote);
    setMotivationalMessage(message);
  };

  const handleSaveMood = async () => {
    if (!user || !selectedDate || !selectedEmotion) {
      toast({
        title: "Please select an emotion",
        variant: "destructive",
      });
      return;
    }

    const dateString = selectedDate.toISOString().split('T')[0];
    
    // Check if mood already exists for this date
    const existingLog = moodLogs.find(log => {
      const logDate = new Date(log.created_at).toISOString().split('T')[0];
      return logDate === dateString;
    });

    try {
      if (existingLog) {
        // Update existing mood
        const { error } = await supabase
          .from("mood_logs")
          .update({
            mood: selectedEmotion,
            note: dayNote || null,
          })
          .eq("id", existingLog.id);

        if (error) throw error;
        
        toast({
          title: "Mood updated! ðŸ’š",
          description: "Your emotion has been saved.",
        });
      } else {
        // Insert new mood
        const { error } = await supabase
          .from("mood_logs")
          .insert({
            user_id: user.id,
            mood: selectedEmotion,
            note: dayNote || null,
          });

        if (error) throw error;
        
        toast({
          title: "Mood saved! ðŸ’š",
          description: motivationalMessage || "Your emotion has been recorded.",
        });
      }

      await loadMoodLogs();
      setIsDialogOpen(false);
      setDayNote("");
      setSelectedEmotion(null);
    } catch (error: any) {
      toast({
        title: "Error",
        description: error.message || "Failed to save mood",
        variant: "destructive",
      });
    }
  };

  const navigateMonth = (direction: "prev" | "next") => {
    setCurrentDate(prev => {
      const newDate = new Date(prev);
      if (direction === "prev") {
        newDate.setMonth(prev.getMonth() - 1);
      } else {
        newDate.setMonth(prev.getMonth() + 1);
      }
      return newDate;
    });
  };

  const getMoodDistribution = () => {
    const last30Days = moodLogs.slice(0, 30);
    const distribution = {
      very_happy: 0,
      happy: 0,
      neutral: 0,
      sad: 0,
      very_sad: 0,
    };

    last30Days.forEach(log => {
      distribution[log.mood as keyof typeof distribution]++;
    });

    const total = last30Days.length || 1;
    return {
      very_happy: (distribution.very_happy / total) * 100,
      happy: (distribution.happy / total) * 100,
      neutral: (distribution.neutral / total) * 100,
      sad: (distribution.sad / total) * 100,
      very_sad: (distribution.very_sad / total) * 100,
    };
  };

  const getCurrentMood = () => {
    if (moodLogs.length === 0) return "calm";
    const recent = moodLogs[0];
    if (recent.mood === "very_happy" || recent.mood === "happy") return "joyful";
    if (recent.mood === "sad" || recent.mood === "very_sad") return recent.mood === "very_sad" ? "angry" : "sad";
    return "calm";
  };

  const weekDays = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];
  const monthNames = [
    "January", "February", "March", "April", "May", "June",
    "July", "August", "September", "October", "November", "December"
  ];

  const currentMood = getCurrentMood();
  const distribution = getMoodDistribution();

  return (
    <div className="min-h-screen bg-[var(--gradient-hero)] p-4 pb-24">
      <motion.div
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        className="max-w-6xl mx-auto"
      >
        <Button
          variant="ghost"
          size="sm"
          onClick={() => navigate("/chat")}
          className="mb-4 text-white hover:bg-white/20"
        >
          <ArrowLeft className="h-4 w-4 mr-2" />
          Back to Chat
        </Button>

        {/* Header with Avatar Persona */}
        <motion.div
          initial={{ opacity: 0, scale: 0.95 }}
          animate={{ opacity: 1, scale: 1 }}
          transition={{ delay: 0.1 }}
          className="mb-6"
        >
          <Card className="relative overflow-hidden border-2 border-white/40 bg-white/90 backdrop-blur-sm shadow-xl">
            <div className="absolute inset-0 bg-gradient-to-br from-primary/10 via-transparent to-accent/10" />
            <CardHeader className="relative z-10">
              <div className="flex items-center justify-between">
                <div className="flex items-center gap-4">
                  <AvatarPersona name="You" state={currentMood === "joyful" ? "encouraging" : currentMood === "sad" || currentMood === "angry" ? "empathetic" : "calm"} />
                  <div>
                    <CardTitle className="text-3xl font-bold gradient-text">
                      Your Mood Journey
                    </CardTitle>
                    <CardDescription className="text-lg mt-1">
                      Track your emotions and watch yourself grow
                    </CardDescription>
                  </div>
                </div>
                
                {/* Mental Health Percentage */}
                <div className="text-center">
                  <div className={`text-4xl font-bold ${healthChange >= 0 ? "text-green-600" : "text-red-600"}`}>
                    {healthPercentage}%
                  </div>
                  <div className="text-sm text-muted-foreground">Mental Health</div>
                  {healthChange !== 0 && (
                    <div className={`text-xs mt-1 ${healthChange >= 0 ? "text-green-600" : "text-red-600"}`}>
                      {healthChange >= 0 ? "â†‘" : "â†“"} {Math.abs(healthChange)}%
                    </div>
                  )}
                </div>
              </div>
            </CardHeader>
          </Card>
        </motion.div>

        {/* Circular Mood Analysis */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
          className="mb-6"
        >
          <Card className="bg-white/90 backdrop-blur-sm border-2 border-white/40 shadow-xl">
            <CardHeader>
              <CardTitle className="flex items-center gap-2">
                <Brain className="h-5 w-5 text-primary" />
                Emotional Analysis (Last 30 Days)
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div className="flex items-center justify-center gap-8 flex-wrap">
                {/* Circular Progress Indicators */}
                {Object.entries(distribution).map(([mood, percentage]) => (
                  <div key={mood} className="flex flex-col items-center gap-2">
                    <div className="relative w-24 h-24">
                      <svg className="transform -rotate-90 w-24 h-24">
                        <circle
                          cx="48"
                          cy="48"
                          r="40"
                          stroke="currentColor"
                          strokeWidth="8"
                          fill="none"
                          className="text-gray-200"
                        />
                        <circle
                          cx="48"
                          cy="48"
                          r="40"
                          stroke={getMoodColor(mood)}
                          strokeWidth="8"
                          fill="none"
                          strokeDasharray={`${2 * Math.PI * 40}`}
                          strokeDashoffset={`${2 * Math.PI * 40 * (1 - percentage / 100)}`}
                          className="transition-all duration-500"
                        />
                      </svg>
                      <div className="absolute inset-0 flex items-center justify-center">
                        <span className="text-2xl">{getMoodEmoji(mood)}</span>
                      </div>
                    </div>
                    <div className="text-center">
                      <div className="text-sm font-semibold capitalize">{mood.replace('_', ' ')}</div>
                      <div className="text-xs text-muted-foreground">{Math.round(percentage)}%</div>
                    </div>
                  </div>
                ))}
              </div>
            </CardContent>
          </Card>
        </motion.div>

        {/* Monthly Calendar */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
          className="mb-6"
        >
          <Card className="bg-white/90 backdrop-blur-sm border-2 border-white/40 shadow-xl">
            <CardHeader>
              <div className="flex items-center justify-between">
                <div>
                  <CardTitle className="flex items-center gap-2">
                    <Calendar className="h-5 w-5 text-primary" />
                    {monthNames[currentDate.getMonth()]} {currentDate.getFullYear()}
                  </CardTitle>
                  <CardDescription>Click on any day to log or update your emotion</CardDescription>
                </div>
                <div className="flex gap-2">
                  <Button
                    variant="outline"
                    size="icon"
                    onClick={() => navigateMonth("prev")}
                  >
                    <ChevronLeft className="h-4 w-4" />
                  </Button>
                  <Button
                    variant="outline"
                    size="icon"
                    onClick={() => navigateMonth("next")}
                  >
                    <ChevronRight className="h-4 w-4" />
                  </Button>
                </div>
              </div>
            </CardHeader>
            <CardContent>
              {/* Week day headers */}
              <div className="grid grid-cols-7 gap-2 mb-2">
                {weekDays.map(day => (
                  <div key={day} className="text-center font-semibold text-sm text-primary py-2">
                    {day}
                  </div>
                ))}
              </div>

              {/* Calendar grid */}
              <div className="grid grid-cols-7 gap-2">
                {getDaysInMonth().map((day, index) => {
                  const isToday = day.date.toDateString() === new Date().toDateString();
                  const moodColor = day.mood ? getMoodColor(day.mood.mood) : "#f3f4f6";
                  
                  return (
                    <motion.button
                      key={index}
                      initial={{ opacity: 0, scale: 0.8 }}
                      animate={{ opacity: 1, scale: 1 }}
                      transition={{ delay: index * 0.01 }}
                      onClick={() => handleDateClick(day)}
                      disabled={!day.isCurrentMonth}
                      className={`
                        aspect-square rounded-lg p-2 flex flex-col items-center justify-center
                        transition-all duration-200 relative group
                        ${!day.isCurrentMonth ? "opacity-30 cursor-not-allowed" : "cursor-pointer hover:scale-105"}
                        ${isToday ? "ring-2 ring-primary ring-offset-2" : ""}
                      `}
                      style={{
                        backgroundColor: day.isCurrentMonth ? moodColor : "#f9fafb",
                        border: `2px solid ${day.isCurrentMonth ? moodColor : "#e5e7eb"}`,
                      }}
                    >
                      {day.isCurrentMonth && (
                        <>
                          <span className="text-xs font-semibold text-white drop-shadow-md mb-1">
                            {day.mood ? getMoodEmoji(day.mood.mood) : ""}
                          </span>
                          <span className={`text-lg font-bold ${day.mood ? "text-white drop-shadow-md" : "text-gray-600"}`}>
                            {day.dayNumber}
                          </span>
                          {day.mood?.note && (
                            <div className="absolute -top-1 -right-1 w-2 h-2 bg-white rounded-full opacity-75" />
                          )}
                        </>
                      )}
                    </motion.button>
                  );
                })}
              </div>

              {/* Legend */}
              <div className="mt-6 pt-6 border-t flex flex-wrap gap-4 justify-center">
                <div className="flex items-center gap-2">
                  <div className="w-4 h-4 rounded" style={{ backgroundColor: "#FFD700" }} />
                  <span className="text-sm">Happy</span>
                </div>
                <div className="flex items-center gap-2">
                  <div className="w-4 h-4 rounded" style={{ backgroundColor: "#4169E1" }} />
                  <span className="text-sm">Sad</span>
                </div>
                <div className="flex items-center gap-2">
                  <div className="w-4 h-4 rounded" style={{ backgroundColor: "#DC143C" }} />
                  <span className="text-sm">Angry</span>
                </div>
                <div className="flex items-center gap-2">
                  <div className="w-4 h-4 rounded" style={{ backgroundColor: "#808080" }} />
                  <span className="text-sm">Neutral</span>
                </div>
              </div>
            </CardContent>
          </Card>
        </motion.div>

        {/* Emotion Selection Dialog */}
        <Dialog open={isDialogOpen} onOpenChange={setIsDialogOpen}>
          <DialogContent className="sm:max-w-md">
            <DialogHeader>
              <DialogTitle>
                {selectedDate?.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' })}
              </DialogTitle>
              <DialogDescription>
                How are you feeling today? Select an emotion and tell us about your day.
              </DialogDescription>
            </DialogHeader>

            <div className="space-y-4">
              {/* Emotion Buttons */}
              <div>
                <label className="text-sm font-medium mb-2 block">Select Your Emotion</label>
                <div className="grid grid-cols-5 gap-2">
                  {EMOTIONS.map(emotion => (
                    <motion.button
                      key={emotion.mood}
                      whileHover={{ scale: 1.05 }}
                      whileTap={{ scale: 0.95 }}
                      onClick={() => handleEmotionSelect(emotion.mood)}
                      className={`
                        flex flex-col items-center gap-1 p-3 rounded-lg border-2 transition-all
                        ${selectedEmotion === emotion.mood
                          ? "border-primary bg-primary/10 scale-105"
                          : "border-gray-200 hover:border-primary/50"
                        }
                      `}
                      style={{
                        backgroundColor: selectedEmotion === emotion.mood ? emotion.bgColor : "transparent",
                      }}
                    >
                      <span className="text-2xl">{emotion.emoji}</span>
                      <span className="text-xs font-medium">{emotion.label}</span>
                    </motion.button>
                  ))}
                </div>
              </div>

              {/* Day Note Input */}
              <div>
                <label className="text-sm font-medium mb-2 block flex items-center gap-2">
                  <MessageCircle className="h-4 w-4" />
                  Can you tell us about your day in words?
                </label>
                <Textarea
                  value={dayNote}
                  onChange={(e) => {
                    setDayNote(e.target.value);
                    if (selectedEmotion) {
                      setMotivationalMessage(generateMotivationalMessage(selectedEmotion, e.target.value));
                    }
                  }}
                  placeholder="Share what made you feel this way today..."
                  className="min-h-[100px]"
                />
              </div>

              {/* Motivational Message */}
              {motivationalMessage && selectedEmotion && (
                <motion.div
                  initial={{ opacity: 0, y: 10 }}
                  animate={{ opacity: 1, y: 0 }}
                  className="p-4 rounded-lg bg-gradient-to-r from-primary/10 to-secondary/10 border-2 border-primary/20"
                >
                  <div className="flex items-start gap-2">
                    <Sparkles className="h-5 w-5 text-primary mt-0.5" />
                    <p className="text-sm font-medium text-primary italic">
                      {motivationalMessage}
                    </p>
                  </div>
                </motion.div>
              )}

              <div className="flex gap-2 pt-2">
                <Button
                  variant="outline"
                  onClick={() => {
                    setIsDialogOpen(false);
                    setDayNote("");
                    setSelectedEmotion(null);
                  }}
                  className="flex-1"
                >
                  Cancel
                </Button>
                <Button
                  onClick={handleSaveMood}
                  disabled={!selectedEmotion}
                  className="flex-1 bg-gradient-to-r from-primary to-secondary"
                >
                  <Heart className="h-4 w-4 mr-2" />
                  Save Emotion
                </Button>
              </div>
            </div>
          </DialogContent>
        </Dialog>
      </motion.div>
    </div>
  );
};

export default Mood;